arch_updates {
    format = "AUR:{aur} / PACMAN:{pacman}"
}

backlight {
    command = 'light'
    format = ": {level}"
}

battery_level {
    cache_timeout = 2
    format = " {percent}%"
}

keyboard_layout {
    cache_timeout = 0.3
    #override mouse buttons cunku ustune tiklayinca bozuluyor
    button_next = None
    button_prev = None
}

lm_sensors {
    sensors = ['processor_fan', 'cpu']
    chips = ['dell_smm-virtual-0']
    format_chip = "{format_sensor}"


}

sysdata {
    format= ":{cpu_temp}{temp_unit}"
}

volume_status {
    format = "🔉: {percentage}"
    format_muted = "🔇: {percentage}"
    thresholds = [(0,'good')]
    cache_timeout = 1
}

time {
    format = "%a - %d %b - %H:%M"
}
